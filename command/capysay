#!/usr/bin/env php
<?php
// ¬© 2025 Chitch Contributors, Licensed under the EUPL
$width = 44; // bubble width

// always get text as string (CLI or browser)
$text = implode(' ', array_slice($argv, 1))  // üñ• terminal

?>

  ____________________________________________
 /                                            \
<?= implode(PHP_EOL, array_map(
        fn($line) => '| ' . str_pad($line, $width, ' ', STR_PAD_BOTH) . ' |',
        explode(PHP_EOL, wordwrap($text, $width, PHP_EOL))
     )) . PHP_EOL ?>
 \______________________________\    /________/
                                 \  /
                                  \/
