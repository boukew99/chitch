<IfModule mod_rewrite.c>
    RewriteEngine On

    # ğŸ” Force HTTPS for PHP files
    RewriteCond %{HTTPS} !=on
    RewriteCond %{REQUEST_URI} \.php$ [NC]
    RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

</IfModule>

<IfModule mod_headers.c>
    # ğŸ§  Cache Control for static files (1 year)
    <FilesMatch "\.(ico|pdf|jpg|jpeg|png|gif|js|css|svg|br|woff2?)$">
        Header set Cache-Control "max-age=31536000, public"
    </FilesMatch>
</IfModule>

<IfModule mod_php.c>
    # ğŸ˜ PHP Logging, Specifically for Hetzner
    php_flag log_errors on
    php_value error_log /usr/home/chitch/php.log
</IfModule>

